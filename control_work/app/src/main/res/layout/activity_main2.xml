<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background2"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/welcome"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65.04dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="122.36dp"
        android:layout_height="138.7dp"
        app:srcCompat="@drawable/lion_without"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="76.09dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Войдите в аккаунт"
        android:textAllCaps="false"
        android:layout_marginTop="163dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="35dp"
        android:textSize="16sp"
        android:drawableLeft="@drawable/human"
        android:padding="50dp"
        android:insetBottom="6dp"
        android:background="@drawable/acc_button"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:drawablePadding="-65dp"
        android:onClick="next"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:layout_marginTop="20.65dp"
        app:layout_constraintTop_toBottomOf="@+id/button_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="35dp"
        android:textSize="16sp"
        android:drawableLeft="@drawable/human_reg"
        android:padding="32dp"
        android:insetBottom="6dp"
        android:background="@drawable/reg_button"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:paddingStart="30dp"
        android:drawablePadding="-50dp"
        android:onClick="next2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>